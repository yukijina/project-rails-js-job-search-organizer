<h2 class="my-5">EDIT THE COMPANY</h2>

<%= form_for @company do |f| %>
  <div class="form-group">
    <%= f.label "Company Name" %><br>
    <%= f.text_field :name, class: "form-control w-50" %>
  </div>

  <div class="form-group">
    <%= f.label "Website" %><br>
    <%= f.text_field :url, class: "form-control w-25" %>
  </div>

  <div class="form-group">
    <%= f.label "Description" %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "Update", class: "btn btn-info my-5", data: { confirm: "Successfully updated!" }  %>
<% end %>

<div class="my-5">
  <%= link_to 'Back', url_for(:back) %>
</div>
